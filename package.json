{
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "eslint": "^9.26.0",
        "globals": "^16.1.0",
        "htmlhint": "^1.1.4",
        "jes": "^0.6.1",
        "jest": "^29.7.0",
        "jsdoc": "^4.0.4",
        "stylelint": "^16.19.1",
        "stylelint-config-standard": "^38.0.0"
    },
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "jslint": "npx eslint",
        "csslint": "npx stylelint stylesheets/",
        "htmllint": "npx htmlhint",
        "lint": "npm run jslint; npm run csslint; npm run htmllint",
        "docs": "./node_modules/.bin/jsdoc ./scripts -r -d docs"
    },
    "type": "module",
    "jest": {
        "transform": {},
        "verbose": true
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "printWidth": 100,
        "quoteProps": "preserve"
    }
}
