{
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@stylistic/stylelint-plugin": "^3.1.2",
        "eslint": "^9.26.0",
        "globals": "^16.1.0",
        "htmlhint": "^1.1.4",
        "jes": "^0.6.1",
        "jest": "^29.7.0",
        "jsdoc": "^4.0.4",
        "stylelint": "^16.19.1",
        "stylelint-config-standard": "^38.0.0"
    },
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "jslint": "npx eslint -c config/eslint.config.mjs",
        "csslint": "npx stylelint stylesheets/ -c config/stylelint.config.js",
        "htmllint": "npx htmlhint -i **/docs/** -i **/coverage/** -c config/.htmlhintrc",
        "lint": "npm run jslint; npm run csslint; npm run htmllint",
        "docs": "./node_modules/.bin/jsdoc ./scripts -r -d docs"
    },
    "type": "module",
    "jest": {
        "transform": {},
        "verbose": true,
        "collectCoverage": true,
        "collectCoverageFrom": [
            "scripts/**/*.js"
        ],
        "coverageDirectory": "coverage",
        "testMatch": [
            "**/__tests__/**/*.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "printWidth": 100,
        "quoteProps": "preserve"
    }
}
